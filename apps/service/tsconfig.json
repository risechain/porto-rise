{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "types": ["node", "@cloudflare/workers-types"]
  },
  "include": ["./src/**/*"],
  "files": ["env.d.ts"],
  "exclude": ["**/_/**", "dist", "node_modules"]
}
